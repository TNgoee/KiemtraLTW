@{
    ViewData["Title"] = "Trang chủ - Quản lý Cầu lông";
    Layout = "_Layout";
}

@await Component.InvokeAsync("VanDongVienStats")

<style>
    .main-title {
        color: #1a237e;
        font-weight: 700;
        letter-spacing: 1px;
        text-shadow: 0 2px 8px rgba(26, 35, 126, 0.08);
    }

    .main-lead {
        color: #374785;
        font-size: 1.25rem;
        font-weight: 400;
    }

    .card-home {
        border-radius: 1.2rem;
        box-shadow: 0 4px 24px rgba(26, 35, 126, 0.10);
        border: 1px solid #e3e6f0;
        background: #fff;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card-home:hover {
        transform: translateY(-6px) scale(1.03);
        box-shadow: 0 8px 32px rgba(26, 35, 126, 0.18);
        border-color: #1a237e33;
    }

    .card-home .card-body {
        background: #f4f7fb;
        border-radius: 1.2rem;
    }

    .card-home .card-title {
        color: #1a237e;
        font-weight: 600;
    }

    .card-home .btn {
        background: linear-gradient(90deg, #1a237e 0%, #3949ab 100%);
        color: #fff;
        border: none;
        font-weight: 500;
        letter-spacing: 0.03em;
        border-radius: 0.5rem;
        box-shadow: 0 2px 8px rgba(26, 35, 126, 0.10);
        transition: background 0.2s, box-shadow 0.2s;
    }

    .card-home .btn:hover {
        background: linear-gradient(90deg, #3949ab 0%, #1a237e 100%);
        color: #fff;
        box-shadow: 0 4px 16px rgba(26, 35, 126, 0.18);
    }

    .card-home i {
        color: #1a237e !important;
        filter: drop-shadow(0 2px 8px #1a237e22);
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center mb-4 main-title">Hệ thống Quản lý Cầu lông</h1>
            <p class="lead text-center mb-5 main-lead">Chào mừng bạn đến với hệ thống quản lý giải đấu cầu lông</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card card-home h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5 class="card-title">Vận động viên</h5>
                    <p class="card-text">Quản lý thông tin vận động viên tham gia giải đấu</p>
                    <a href="@Url.Action("DSVanDongVien", "Home")" class="btn">Xem danh sách</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-home h-100">
                <div class="card-body text-center">
                    <i class="fas fa-whistle fa-3x mb-3"></i>
                    <h5 class="card-title">Trọng tài</h5>
                    <p class="card-text">Quản lý thông tin trọng tài điều hành trận đấu</p>
                    <a href="@Url.Action("DSTrongTai", "Home")" class="btn">Xem danh sách</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-home h-100">
                <div class="card-body text-center">
                    <i class="fas fa-trophy fa-3x mb-3"></i>
                    <h5 class="card-title">Giải đấu</h5>
                    <p class="card-text">Quản lý thông tin các giải đấu cầu lông</p>
                    <a href="@Url.Action("DSGiaiDau", "Home")" class="btn">Xem danh sách</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-home h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                    <h5 class="card-title">Lịch thi đấu</h5>
                    <p class="card-text">Quản lý lịch trình thi đấu của các giải</p>
                    <a href="@Url.Action("DSLichThiDau", "Home")" class="btn">Xem danh sách</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-home h-100">
                <div class="card-body text-center">
                    <i class="fas fa-gamepad fa-3x mb-3"></i>
                    <h5 class="card-title">Trận đấu</h5>
                    <p class="card-text">Quản lý thông tin các trận đấu và kết quả</p>
                    <a href="@Url.Action("DSTranDau", "Home")" class="btn">Xem danh sách</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-home h-100">
                <div class="card-body text-center">
                    <i class="fas fa-flag fa-3x mb-3"></i>
                    <h5 class="card-title">Đội tuyển</h5>
                    <p class="card-text">Quản lý thông tin các đội tuyển tham gia</p>
                    <a href="@Url.Action("DSDoiTuyen", "Home")" class="btn">Xem danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>